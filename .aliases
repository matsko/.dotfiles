function trail() {
  X=`which realpath`
  if [ $? != 0 ]; then
    echo "install `brew install coreutils`";
  else
    realpath $1
  fi
}
function trail-copy {
  trail $1 | pbcopy
  if [ $? != 0 ]; then
    echo "error file not found"
  else
    echo "path copied to clipboard!"
  fi
}
